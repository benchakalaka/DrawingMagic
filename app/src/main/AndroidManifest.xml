<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.drawingmagic" >

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".AStart_"
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Sherlock.__Theme.DarkActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ActivityCamera_"
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Sherlock.__Theme.DarkActionBar">
        </activity>

        <activity
            android:name=".ADrawingMagic_"
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Sherlock.__Theme.DarkActionBar"></activity>

        <activity
            android:name=".ActivityGallery"
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Sherlock.__Theme.DarkActionBar">
        </activity>

    </application>

</manifest>
