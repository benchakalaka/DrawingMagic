<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background_colour"
    android:padding="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tvNext">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvGuideSteps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/default_text_colour"
                android:textSize="@dimen/big_text_size" />

            <ImageView
                android:id="@+id/ivGuideSteps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvGuideSteps"
                android:layout_centerHorizontal="true"
                android:contentDescription="@null"
                android:src="@drawable/icon" />
        </RelativeLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tvNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:gravity="end"
        android:text="@string/next"
        android:textColor="@color/default_text_colour"
        android:textSize="@dimen/big_text_size" />
</RelativeLayout>
