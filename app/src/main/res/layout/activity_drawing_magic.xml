<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background_colour"
    android:padding="3dp">


    <LinearLayout
        android:id="@+id/llTwoPanelHolder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <!-- CANVAS HOLDER LAYOUT-->
        <RelativeLayout
            android:id="@+id/rlCanvasHolder"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.drawingmagic.core.DrawingView
                android:id="@+id/drawingView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <jp.co.cyberagent.android.gpuimage.GPUImageView
                android:id="@+id/gpuImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.theartofdev.edmodo.cropper.CropImageView
                android:id="@+id/cropImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/black"
                android:visibility="gone"
                custom:imageResource="@drawable/kid" />

            <com.jmedeisis.bugstick.Joystick
                android:id="@+id/joystick"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/default_margin"
                android:background="@drawable/bg_base"
                android:visibility="gone"
                app:force_square="true"
                app:motion_constraint="None"
                app:start_on_first_touch="true">

                <Button
                    android:layout_width="@dimen/stick_size"
                    android:layout_height="@dimen/stick_size"
                    android:background="@drawable/bg_stick" />

            </com.jmedeisis.bugstick.Joystick>

            <FrameLayout
                android:id="@+id/flFragmentHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>


        <!-- TOOLS HOLDER LAYOUT -->
        <RelativeLayout
            android:id="@+id/rlToolsHolder"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <github.chenupt.springindicator.SpringIndicator xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/viewPagerIndicator"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:siIndicatorColor="@color/default_ab_background_colour"
                app:siIndicatorColors="@array/indicator_colors"
                app:siSelectedTextColor="@android:color/white"
                app:siTextColor="@color/default_text_colour"
                app:siTextSize="18sp" />

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewPagerIndicator" />
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>
