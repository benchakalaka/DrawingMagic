<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AStart">



    <com.romainpiel.shimmer.ShimmerTextView
        android:id="@+id/stv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Texts igsjdfj ksndfkn skjdf "
        android:textColor="#444"
        android:textSize="50sp"
        app:reflectionColor="#f00"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_launcher"
        app:border_color="#FFAA0000"
        app:border_width="2dp" />



    <Button
        android:id="@+id/bGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Gallery" />

    <Button
        android:id="@+id/bCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera" />

    <Button
        android:id="@+id/bDrawingMagic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Magic" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <com.daimajia.androidviewhover.BlurLayout
            android:id="@+id/mSampleLayout"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/source"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:scaleType="fitXY"
                android:src="@drawable/php" />
        </com.daimajia.androidviewhover.BlurLayout>

        <com.daimajia.androidviewhover.BlurLayout
            android:id="@+id/mSampleLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mSampleLayout"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="@dimen/activity_horizontal_margin">

            <ImageView
                android:id="@+id/source2"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_below="@+id/source"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/image2" />
        </com.daimajia.androidviewhover.BlurLayout>

        <com.daimajia.androidviewhover.BlurLayout
            android:id="@+id/mSampleLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mSampleLayout2"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="@dimen/activity_horizontal_margin">

            <ImageView
                android:id="@+id/source3"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_below="@+id/source"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/strawberries" />
        </com.daimajia.androidviewhover.BlurLayout>

        <com.daimajia.androidviewhover.BlurLayout
            android:id="@+id/mSampleLayout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mSampleLayout3"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="@dimen/activity_horizontal_margin">

            <ImageView
                android:id="@+id/source4"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_below="@+id/source"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/kid" />
        </com.daimajia.androidviewhover.BlurLayout>
    </RelativeLayout>


</RelativeLayout>
